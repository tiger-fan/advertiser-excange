<script>
  var dojoConfig = { 
    parseOnLoad: false,
    packages: [{
      "name": "extras",
      "location": "/assets/store/extras"
    }]
  };
</script>
<script src="http://serverapi.arcgisonline.com/jsapi/arcgis/3.5/"></script>
